<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Franime.controller.AddAnimeController">

    <VBox alignment="CENTER" spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10">
        <HBox spacing="5">
            <Label text="Name:"/>
            <TextField fx:id="nameField"/>
        </HBox>
        <HBox spacing="5">
            <Label text="Type:"/>
            <TextField fx:id="typeField"/>
        </HBox>
        <HBox spacing="5">
            <Label text="ImgSrc:"/>
            <TextField fx:id="imgSrcField"/>
        </HBox>
        <HBox spacing="5">
            <Label text="EpisodeAndSeason:"/>
            <TextField fx:id="episodeAndSeasonField"/>
        </HBox>
        <HBox spacing="5">
            <Label text="Rank:"/>
            <TextField fx:id="rankField"/>
        </HBox>
        <HBox spacing="5">
            <Label text="Director:"/>
            <TextField fx:id="directorField"/>
        </HBox>
        <HBox spacing="5">
            <Label text="Description:"/>
            <TextField fx:id="descriptionField"/>
        </HBox>
    </VBox>

    <Button text="Enregistrer" onAction="#addAnime" AnchorPane.bottomAnchor="10" AnchorPane.rightAnchor="10"/>
</AnchorPane>
