<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="Franime.controller.AnimeDetailsController"
            style="-fx-background-color: #f0f0f0;">

    <HBox alignment="CENTER" spacing="10" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.topAnchor="10" style="-fx-background-color: #ffffff; -fx-border-color: #e0e0e0; -fx-border-width: 1px;">
        <VBox spacing="5" style="-fx-padding: 10;">
            <Label fx:id="nameLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label fx:id="typeLabel" style="-fx-font-size: 16px;"/>
            <Label fx:id="directorLabel" style="-fx-font-size: 16px;"/>
            <Label fx:id="descriptionLabel" wrapText="true" style="-fx-font-size: 14px;"/>
        </VBox>
    </HBox>

</AnchorPane>
